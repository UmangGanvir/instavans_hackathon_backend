<!-- Create Request Modal -->
<div id="create_request_modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-body">

                <div id="create_request_modal_container">

                    <h3>Create a shipper request -</h3>
                    <hr/>

                    <div class="form-group">
                        <label for="arrivalDay">Select Arrival Day : </label>
                        <input type="text" class="form-control" id="arrivalDay" placeholder="DD/MM/YYYY" />
                    </div>

                    <div class="form-group">
                        <label for="arrivalDaySeconds">Select Arrival Time : </label>
                        <div class="input-group clockpicker">
                            <input type="text" id="arrivalDaySeconds" class="form-control" value="09:30">
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-time"></span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="amountOffered">Amount Offered : </label>
                        <input type="text" class="form-control" id="amountOffered" placeholder="Enter amount to be offered" />
                    </div>

                    <div class="form-group">
                        <label for="portersRequired">Porters Required : </label>
                        <input type="text" class="form-control" id="portersRequired" placeholder="Enter number of porters required" />
                    </div>

                    <div class="location-select-container">
                        <div class="form-group">
                            <label for="user_select_email">Enter location : </label>&nbsp;
                            <input type="text" class="typeahead form-control" id="location_select_input" placeholder="Search by Location here.."/>&nbsp;&nbsp;
                        </div>
                    </div>

                    <div class="hide" id="create_request_response">

                    </div>

                    <button id="createRequestBtn" type="button" class="btn btn-primary">Create</button>

                </div>

            </div>

        </div>
    </div>
</div>

<div class="container-fluid">

    <div class="row">
        <header>

            <div class="header-head">
                <a href="/">Shipper Dashboard</a>
            </div>

            <div class="header-navigation pull-right">

                <form class="form-inline" onsubmit="return false;">
                    <div class="form-group">

                        <label for="name">Select Shipper : </label>&nbsp;&nbsp;&nbsp;

                        <select id="creator" class="form-control">
                            <option value="0">Please select a Shipper</option>
                            <option value="1">Shipper 1</option>
                            <option value="2">Shipper 2</option>
                            <option value="3">Shipper 3</option>
                        </select>&nbsp;&nbsp;&nbsp;

                        <button id="openCreateRequestBtn" class="btn btn-default" type="submit">Create Request</button>
                    </div>
                </form>

            </div>

        </header>
    </div>

</div>

